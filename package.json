  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "eosjs": "^16.0.9",
    "lerna": "^3.13.4",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "prettier-tslint": "^0.4.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
