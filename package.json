{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "create": "node createPackage.js",
    "lint": "prettier-tslint fix '**/src/**/*.ts'",
