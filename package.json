{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean:deps": "lerna clean --yes && rm -rf node_modules",
    "clean:dist": "rm -rf packages/*/dist",
    "clean": "npm run clean:deps && npm run clean:dist",
    "build": "npm run clean:dist && tsc --build packages/*",
    "watch": "npm run clean:dist && tsc --build packages/* --watch",
    "create": "node createPackage.js",
    "lint": "tslint --project tsconfig.json --config tslint.json 'packages/*/src/**/*.ts' 'packages/*/__tests__/**/*.ts'",
    "lint-fix": "npm run lint -- --fix",
    "publish": "npm run build && lerna publish",
    "test": "mocha -r ts-node/register packages/**/__tests__/*.spec.ts --exit --timeout 1000000"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "eosjs": "^16.0.9",
    "husky": "^2.3.0",
    "lerna": "^3.13.4",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
