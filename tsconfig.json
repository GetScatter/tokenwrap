{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "umd",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
